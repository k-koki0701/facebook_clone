<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user.name %></td>
  </tr>
  <tr>
    <td><%= image_tag blog.image.url unless blog.image.file.nil? %></td>
  </tr>
  <tr>
    <td><%= blog.content %></td>
  </tr>
  <tr>
  <td><%= link_to '詳細', blog_path(blog.id) %>
  <%= link_to "編集", edit_blog_path(blog.id) %>
  <%= link_to "削除", blog_path(blog.id), method: :delete, data:{confirm: '本当に削除しますか？'} %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to '投稿する', new_blog_path %>
